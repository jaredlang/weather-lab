OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5/weather
OPENWEATHER_API_KEY=your-openweather-api-key-here

GOOGLE_GENAI_USE_VERTEXAI=TRUE
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_CLOUD_LOCATION=us-central1
MODEL=gemini-2.5-flash
TTS_MODEL=gemini-2.5-flash-tts

GOOGLE_CLOUD_AGENT_ENGINE_ENABLE_TELEMETRY=TRUE
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT=TRUE

# Output Directory for Forecast Files
OUTPUT_DIR=output

# Forecast File Cleanup Configuration
# Files older than this many days will be automatically deleted after successful uploads
# Default: 7 days
FORECAST_CLEANUP_DAYS=1

# MCP Server Configuration
# For local development (run MCP server on localhost:8080)
# MCP_SERVER_URL=http://localhost:8080
# For production (Cloud Run deployment)
# MCP_SERVER_URL=https://forecast-mcp-server-xxxxx-uc.a.run.app
MCP_SERVER_URL=http://localhost:8080
